# =============================================================================
# AI-Powered IDS Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# EMAIL CONFIGURATION (for alerts)
# =============================================================================
EMAIL_ENABLED=true
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_RECIPIENT=security-team@yourdomain.com

# For Gmail: Use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords

# =============================================================================
# THREAT INTELLIGENCE APIs
# =============================================================================
# IP Geolocation API (free tier available)
IP_API_KEY=optional-key-for-premium
IP_API_ENDPOINT=http://ip-api.com/json/

# Alternative APIs (optional)
IPAPI_KEY=
ABUSEIPDB_KEY=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_PATH=./data/ids_database.db
LOG_PATH=./logs/ids.log

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
MODEL_PATH=./models/xgboost_ids.pkl
PREPROCESSOR_PATH=./models/preprocessor.pkl
MODEL_THRESHOLD=0.7

# =============================================================================
# DETECTION SETTINGS
# =============================================================================
# Alert threshold (number of attacks before sending email)
ALERT_THRESHOLD=5
# Time window for alert threshold (in minutes)
ALERT_TIME_WINDOW=10
# Enable automatic port blocking
AUTO_BLOCK_ENABLED=false
# Enable automatic recommendations
AUTO_RECOMMEND_ENABLED=true

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
MONITOR_INTERVAL=1
MAX_PACKETS_PER_BATCH=100
ENABLE_LIVE_CAPTURE=false
PCAP_INTERFACE=eth0

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
DASHBOARD_PORT=8501
DASHBOARD_HOST=localhost
DASHBOARD_TITLE=AI-Powered IDS Dashboard

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Require sudo for port operations
REQUIRE_SUDO=true
# Safe mode (prevents actual firewall changes)
SAFE_MODE=true
# Whitelist IPs (comma-separated, no alerts for these)
WHITELIST_IPS=127.0.0.1,localhost,192.168.1.1

# =============================================================================
# DATASET PATHS
# =============================================================================
NSL_KDD_TRAIN=./data/raw/KDDTrain+.txt
NSL_KDD_TEST=./data/raw/KDDTest+.txt
CIC_IDS_PATH=./data/raw/cic_ids_2017/
CSIC_PATH=./data/raw/csic_2010/
